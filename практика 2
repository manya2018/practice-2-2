        k++;

        if (word == slovo) {
            cout << "Расположение: " << k << " Слово: " << word << std::endl;
        }
    }*/
        return 0;
}



TASK 3
#include <iostream>
#include <cmath>
int main()
{
    using namespace std;
    int  y=0, i, a=0;
    int r, x;
    cin >> i;
    x=i%10;
    do
    {
        i=i/10;
        r=pow(2,a);
        y=y+x*r;
        a=a+1;
        x=i%10;
    }while(i>0);
    cout << y << endl;
}
TASK 4

#include <iostream>
#include <cmath>
using namespace std;

int main() {
    system("chcp 65001");
    int chislo; // chislo - десятичное число
    cout << " введите число" << endl;
    cin >> chislo;
    int bin = 0, k = 0, n=0;// bin - двоичное число , n - количество цифр в двоичном числе, k - вспомогательная переменная
    while (chislo>1) {   
        k=chislo%2;
        if (k==0)
        {
            k=k+2;
        }
        bin=bin +pow(10,n)*k;
        chislo /= 2;
        n++;
    }
    for  (int i=0;i<(n);i++) // вывод двоичного числа
    {
        if (bin%10==1)
        {
            cout << "1" ;
        }
        else
        {
            cout<< "0" ;
        }
        bin=bin/10;
    }
    
}

