TASK 2 
#include <iostream>
#include <string>
using namespace std;

int main() {
    system("chcp 65001");
    char first[100];
    char second[100];
    cout << "введите две строчки" << endl;
    gets(first);
    gets(second);
    for (int i=0;i<101;i++)
    {
        if (first[i]=='\0')
        {
            break;
        }
        for(int k=0; k<101;k++)
        {
            cout << "первое, i " << first[i] << i<< endl;
            cout << " второе, k" << second[k] << k << endl;
            if (second[k]=='\0')
            {
                break;
            }

            if( first[i]==second[k])
            {

                cout << "значение" << first[i]<< "позиция:" << k+1 << endl;
            }

        }


    }
    /*string slovo;
    string second;
    string word;
    int k = 0;


